<h5 class="header">Edit Appointment</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="APEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ap_id" class="control-label"></label>
                <input asp-for="Ap_id" class="form-control" readonly/>
                <span asp-validation-for="Ap_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_id" class="control-label"></label>
                <input asp-for="Patient_id" class="form-control" readonly/>
                <span asp-validation-for="Patient_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="P_Name" class="control-label"></label>
                <input asp-for="P_Name" class="form-control" />
                <span asp-validation-for="P_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ap_Date" class="control-label"></label>
                <input asp-for="Ap_Date" class="form-control" />
                <span asp-validation-for="Ap_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeSlotStart" class="control-label"></label>
                <input asp-for="TimeSlotStart" class="form-control" />
                <span asp-validation-for="TimeSlotStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeSlotEnd" class="control-label"></label>
                <input asp-for="TimeSlotEnd" class="form-control" />
                <span asp-validation-for="TimeSlotEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purpose" class="control-label"></label>
                <input asp-for="Purpose" class="form-control" />
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor_id" class="control-label"></label>
                <input asp-for="Doctor_id" class="form-control" readonly/>
                <span asp-validation-for="Doctor_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="D_Name" class="control-label"></label>
                <input asp-for="D_Name" class="form-control" readonly/>
                <span asp-validation-for="D_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

